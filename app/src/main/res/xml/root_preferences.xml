<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="theme"
            app:title="@string/theme"
            app:iconSpaceReserved="false"
            app:entryValues="@array/theme_values"
            app:entries="@array/theme_entries"
            app:defaultValue="system"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreferenceCompat
            app:key="md3"
            app:title="@string/md3"
            app:iconSpaceReserved="false"
            app:summary="@string/md3_subtext"
            app:defaultValue="false"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/general"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="no_flash_when_screen"
            app:title="@string/no_flash_when_screen"
            app:iconSpaceReserved="false"
            app:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sos"
        app:iconSpaceReserved="false">

        <EditTextPreference
            app:key="words_per_min"
            app:title="@string/words_per_min"
            app:dialogMessage="@string/words_per_min_explanation"
            app:iconSpaceReserved="false"
            app:defaultValue="5"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreferenceCompat
            app:key="use_farnsworth"
            app:title="@string/use_farnsworth"
            app:iconSpaceReserved="false"
            app:defaultValue="false"/>

        <EditTextPreference
            app:key="farnsworth_unit"
            app:title="@string/farnsworth_unit_length"
            app:iconSpaceReserved="false" />

        <Preference
            app:key="learn_more_morse_timing"
            app:title="@string/learn_more_morse_timing"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>