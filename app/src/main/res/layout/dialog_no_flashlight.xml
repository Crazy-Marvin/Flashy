<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pill"
        android:layout_width="50dp"
        android:layout_height="6dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pill"
        android:importantForAccessibility="no"/>

    <ImageView
        android:id="@+id/tv_options"
        android:src="@drawable/ic_group_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pill"/>

    <TextView
        android:id="@+id/no_flashlight"
        android:text="@string/no_flashlight"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_options"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/container_use_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_flashlight"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:text="@string/use_screen"/>

</RelativeLayout>